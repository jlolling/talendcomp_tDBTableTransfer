<COMPONENT>
	<HEADER PLATEFORM="ALL" SERIAL="" VERSION="3.2" STATUS="ALPHA"
		COMPATIBILITY="ALL" AUTHOR="Jan Lolling" RELEASE_DATE="20160516A"
		STARTABLE="true" HAS_CONDITIONAL_OUTPUTS="false">
		<SIGNATURE />
	</HEADER>

	<FAMILIES>
		<FAMILY>Databases/MySQL</FAMILY>
	</FAMILIES>

	<DOCUMENTATION>
		<URL />
	</DOCUMENTATION>

	<CONNECTORS>
		<CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1" />
		<CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
		<CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
		<CONNECTOR CTYPE="COMPONENT_OK" />
		<CONNECTOR CTYPE="COMPONENT_ERROR" />
		<CONNECTOR CTYPE="RUN_IF" />
	</CONNECTORS>

	<PARAMETERS>

		<PARAMETER 
			NAME="USE_DATA_SOURCE" 
			FIELD="CHECK"
			GROUP="CONNECTIONS"
			NUM_ROW="10">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER 
			NAME="SOURCE_DATA_SOURCE_ALIAS" 
			FIELD="TEXT" 
			NUM_ROW="12"
			REQUIRED="true" 
			GROUP="CONNECTIONS"
			SHOW_IF="(USE_DATA_SOURCE == 'true')">
			<DEFAULT></DEFAULT>
		</PARAMETER>

		<PARAMETER 
			NAME="TARGET_DATA_SOURCE_ALIAS" 
			FIELD="TEXT" 
			NUM_ROW="12"
			REQUIRED="true" 
			GROUP="CONNECTIONS"
			SHOW_IF="(USE_DATA_SOURCE == 'true') and (BACKUP_DATA_ONLY == 'false')">
			<DEFAULT></DEFAULT>
		</PARAMETER>

		<PARAMETER 
			NAME="CONNECTION_SOURCE" 
			FIELD="COMPONENT_LIST"
		   	FILTER="REGEXP:^(.)*(Connection)(.)*"
			NUM_ROW="20" 
			GROUP="CONNECTIONS"
			SHOW_IF="(USE_DATA_SOURCE == 'false')" 
			DYNAMIC_SETTINGS="true" />
			
		<PARAMETER 
			NAME="CONNECTION_TARGET" 
			FIELD="COMPONENT_LIST"
			FILTER="tMysqlConnection" 
			NUM_ROW="20" 
			GROUP="CONNECTIONS"
			SHOW_IF="(USE_DATA_SOURCE == 'false') and (BACKUP_DATA_ONLY == 'false')" 
			DYNAMIC_SETTINGS="true" />

		<PARAMETER 
			NAME="CLOSE_CONNECTIONS" 
			FIELD="CHECK"
			NUM_ROW="21"
			GROUP="CONNECTIONS"
			SHOW_IF="(USE_DATA_SOURCE == 'false')">
			<DEFAULT>true</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="USE_QUERY" FIELD="CHECK" REQUIRED="true"
			NUM_ROW="50">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="SOURCE_QUERY" FIELD="MEMO_SQL" NUM_ROW="60"
			REQUIRED="true" SHOW_IF="USE_QUERY == 'true'" NB_LINES="5">
			<DEFAULT>"select * from schema.table where field=value...."</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="SOURCE_TABLE" FIELD="TEXT" NUM_ROW="60"
			REQUIRED="true" SHOW_IF="USE_QUERY == 'false'">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="SOURCE_WHERE" FIELD="TEXT" NUM_ROW="70"
			REQUIRED="false" SHOW_IF="USE_QUERY == 'false'">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="TARGET_TABLE" FIELD="TEXT" NUM_ROW="110"
			REQUIRED='true' SHOW_IF="(BACKUP_DATA_ONLY == 'false')" >
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="TARGET_TRUNCATE" FIELD="CHECK" NUM_ROW="120" SHOW_IF="(BACKUP_DATA_ONLY == 'false')">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="TARGET_DISABLE_KEYS" FIELD="CHECK" NUM_ROW="120" SHOW_IF="(BACKUP_DATA_ONLY == 'false')">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="ALLOW_EXCLUDE_COLUMNS" FIELD="CHECK" NUM_ROW="124">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>
		
		<PARAMETER NAME="EXCLUDE_COLUMNS" FIELD="TABLE"
			NUM_ROW="125" NB_LINES="10" SHOW_IF="ALLOW_EXCLUDE_COLUMNS == 'true')">
			<ITEMS>
				<ITEM NAME="COLUMN" FIELD="TEXT" VALUE=""/>
			</ITEMS>
		</PARAMETER>

		<PARAMETER NAME="ALLOW_FIXED_COLUMN_VALUES" FIELD="CHECK" NUM_ROW="126">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>
		<PARAMETER NAME="FIXED_COLUMN_VALUES" FIELD="TABLE"
			NUM_ROW="127" NB_LINES="10" SHOW_IF="ALLOW_FIXED_COLUMN_VALUES == 'true')">
			<ITEMS>
				<ITEM NAME="COLUMN_NAME" FIELD="TEXT" VALUE=""/>
				<ITEM NAME="COLUMN_VALUE" FIELD="TEXT" VALUE=""/>
			</ITEMS>
		</PARAMETER>

		<PARAMETER NAME="LOG_INTERVAL" FIELD="TEXT" NUM_ROW="130">
			<DEFAULT>5</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="DIE_ON_ERROR" FIELD="CHECK" NUM_ROW="130">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="BACKUP_DATA" FIELD="CHECK" NUM_ROW="150">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="BACKUP_DATA_ONLY" FIELD="CHECK" NUM_ROW="150">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="BACKUP_FILE" FIELD="FILE" NUM_ROW="160" REQUIRED='true' SHOW_IF="BACKUP_DATA == 'true'">
			<DEFAULT></DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="EXPORT_BOOL_AS_NUMBER" FIELD="CHECK" NUM_ROW="170" SHOW_IF="BACKUP_DATA == 'true'">
			<DEFAULT>true</DEFAULT>
		</PARAMETER>

	</PARAMETERS>

	<ADVANCED_PARAMETERS>
		<PARAMETER FIELD="TEXT" NAME="SOURCE_FETCHSIZE" NUM_ROW="10"
			READONLY="false" REQUIRED="true" SHOW="true">
			<DEFAULT>10000</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="TARGET_BATCHSIZE" FIELD="TEXT" REQUIRED="true"
			NUM_ROW="30">
			<DEFAULT>10000</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="LOG_QUERY_SQL" FIELD="CHECK" NUM_ROW="50">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="LOG_INSERT_SQL" FIELD="CHECK" NUM_ROW="50">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="DEBUG" FIELD="CHECK" NUM_ROW="51">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="ENABLE_LOG4J_EXPLICITLY" FIELD="CHECK" NUM_ROW="51">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="DB_JAVA_TYPE_MAP" FIELD="TABLE"
			NUM_ROW="60" NB_LINES="10">
			<ITEMS>
				<ITEM NAME="DB_TYPE" FIELD="TEXT" />
				<ITEM NAME="JAVA_TYPE" FIELD="CLOSED_LIST">
					<ITEMS>
						<ITEM NAME="BIGDECIMAL" VALUE="bigdecimal" />
						<ITEM NAME="BOOLEAN" VALUE="boolean" />
						<ITEM NAME="BYTE" VALUE="byte" />
						<ITEM NAME="DATE" VALUE="date" />
						<ITEM NAME="DOUBLE" VALUE="double" />
						<ITEM NAME="FLOAT" VALUE="float" />
						<ITEM NAME="INTEGER" VALUE="integer" />
						<ITEM NAME="LONG" VALUE="long" />
						<ITEM NAME="SHORT" VALUE="short" />
						<ITEM NAME="STRING" VALUE="string" />
						<ITEM NAME="TIMESTAMP" VALUE="timestamp" />
						<ITEM NAME="TIME" VALUE="time" />
					</ITEMS>
				</ITEM>
			</ITEMS>
		</PARAMETER>

		<PARAMETER 
			NAME="REUSE_DATA_MODEL" 
			FIELD="CHECK" 
			NUM_ROW="70">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER 
			NAME="ALTERNATIVE_MODEL_KEY" 
			FIELD="TEXT"
			NUM_ROW="80" 
			SHOW_IF="REUSE_DATA_MODEL == 'true'">
			<DEFAULT></DEFAULT>
		</PARAMETER>

	</ADVANCED_PARAMETERS>

	<CODEGENERATION>
		<IMPORTS>
			<IMPORT NAME="Log4J" MODULE="log4j-1.2.17.jar" REQUIRED="true" />
			<IMPORT NAME="SQLRunner" MODULE="sqlrunner-11.3.jar" REQUIRED="true" />
			<IMPORT NAME="cimt Table Transfer" MODULE="table_transfer-3.2.jar" REQUIRED="true" />
			<IMPORT NAME="MySQLJDBCDriver" MODULE="mysql-connector-java-5.1.30-bin.jar" REQUIRED="true" />
		</IMPORTS>
	</CODEGENERATION>

	<RETURNS>
		<RETURN NAME="NB_LINE" TYPE="id_Integer" AVAILABILITY="AFTER" />
		<RETURN NAME="NB_INSERTS" TYPE="id_Integer" AVAILABILITY="AFTER" />
		<RETURN NAME="SOURCE_QUERY" TYPE="id_String" AVAILABILITY="AFTER" />
		<RETURN NAME="SOURCE_TABLE" TYPE="id_String" AVAILABILITY="AFTER" />
		<RETURN NAME="TARGET_TABLE" TYPE="id_String" AVAILABILITY="AFTER" />
		<RETURN NAME="BACKUP_FILE" TYPE="id_String" AVAILABILITY="AFTER" />
	</RETURNS>

</COMPONENT>
