<COMPONENT>
	<HEADER PLATEFORM="ALL" SERIAL="" VERSION="2.0" STATUS="ALPHA"
		COMPATIBILITY="ALL" AUTHOR="Jan Lolling" RELEASE_DATE="20150922A"
		STARTABLE="true" HAS_CONDITIONAL_OUTPUTS="false">
		<SIGNATURE />
	</HEADER>

	<FAMILIES>
		<FAMILY>Databases/MySQL</FAMILY>
	</FAMILIES>

	<DOCUMENTATION>
		<URL />
	</DOCUMENTATION>

	<CONNECTORS>
		<CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1" />
		<CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
		<CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
		<CONNECTOR CTYPE="COMPONENT_OK" />
		<CONNECTOR CTYPE="COMPONENT_ERROR" />
		<CONNECTOR CTYPE="RUN_IF" />
	</CONNECTORS>

	<PARAMETERS>

		<PARAMETER NAME="USE_DATA_SOURCE" FIELD="CHECK"
			NUM_ROW="10">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="SOURCE_DATA_SOURCE_ALIAS" FIELD="TEXT" NUM_ROW="12"
			REQUIRED="true" SHOW_IF="(USE_DATA_SOURCE == 'true')">
			<DEFAULT></DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="TARGET_DATA_SOURCE_ALIAS" FIELD="TEXT" NUM_ROW="13"
			REQUIRED="true" SHOW_IF="(USE_DATA_SOURCE == 'true')">
			<DEFAULT></DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="USE_EXISTING_CONNECTION" FIELD="CHECK"
			NUM_ROW="19" SHOW_IF="USE_DATA_SOURCE == 'false'">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="CONNECTION_SOURCE" FIELD="COMPONENT_LIST"
			FILTER="tMysqlConnection" NUM_ROW="20"
			SHOW_IF="(USE_EXISTING_CONNECTION == 'true') and (USE_DATA_SOURCE == 'false')" DYNAMIC_SETTINGS="true" />
			
		<PARAMETER NAME="CONNECTION_TARGET" FIELD="COMPONENT_LIST"
			FILTER="tMysqlConnection" NUM_ROW="20"
			SHOW_IF="(USE_EXISTING_CONNECTION == 'true') and (USE_DATA_SOURCE == 'false')" DYNAMIC_SETTINGS="true" />

		<PARAMETER NAME="SOURCE_HOST" FIELD="TEXT" NUM_ROW="20"
			REQUIRED="true" SHOW_IF="(USE_EXISTING_CONNECTION == 'false') and (USE_DATA_SOURCE == 'false')">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="SOURCE_PORT" FIELD="TEXT" SHOW="true"
			NUM_ROW="20" REQUIRED="true" SHOW_IF="(USE_EXISTING_CONNECTION == 'false') and (USE_DATA_SOURCE == 'false')">
			<DEFAULT>"3306"</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="SOURCE_DBNAME" FIELD="TEXT" NUM_ROW="30"
			REQUIRED="true" SHOW_IF="(USE_EXISTING_CONNECTION == 'false') or (USE_DATA_SOURCE == 'true')">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="SOURCE_USER" FIELD="TEXT" NUM_ROW="40"
			REQUIRED="true" SHOW_IF="(USE_EXISTING_CONNECTION == 'false') and (USE_DATA_SOURCE == 'false')">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="SOURCE_PASSWORD" FIELD="TEXT" NUM_ROW="40"
			REQUIRED="true" SHOW_IF="(USE_EXISTING_CONNECTION == 'false') and (USE_DATA_SOURCE == 'false')">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="USE_QUERY" FIELD="CHECK" REQUIRED="true"
			NUM_ROW="50">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="SOURCE_QUERY" FIELD="MEMO_SQL" NUM_ROW="60"
			REQUIRED="true" SHOW_IF="USE_QUERY == 'true'" NB_LINES="5">
			<DEFAULT>"select * from schema.table where field=value...."</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="SOURCE_TABLE" FIELD="TEXT" NUM_ROW="60"
			REQUIRED="true" SHOW_IF="USE_QUERY == 'false'">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="SOURCE_WHERE" FIELD="TEXT" NUM_ROW="70"
			REQUIRED="false" SHOW_IF="USE_QUERY == 'false'">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="TARGET_HOST" FIELD="TEXT" NUM_ROW="80"
			REQUIRED="true" SHOW_IF="(USE_EXISTING_CONNECTION == 'false') and (USE_DATA_SOURCE == 'false')">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="TARGET_PORT" FIELD="TEXT" SHOW="true"
			NUM_ROW="80" REQUIRED="true" SHOW_IF="(USE_EXISTING_CONNECTION == 'false') and (USE_DATA_SOURCE == 'false')">
			<DEFAULT>"3306"</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="TARGET_DBNAME" FIELD="TEXT" NUM_ROW="90"
			REQUIRED="true" SHOW_IF="(USE_EXISTING_CONNECTION == 'false') or (USE_DATA_SOURCE == 'true')">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="TARGET_USER" FIELD="TEXT" NUM_ROW="100"
			REQUIRED="true" SHOW_IF="(USE_EXISTING_CONNECTION == 'false') and (USE_DATA_SOURCE == 'false')">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="TARGET_PASSWORD" FIELD="TEXT" NUM_ROW="100"
			REQUIRED="true" SHOW_IF="(USE_EXISTING_CONNECTION == 'false') and (USE_DATA_SOURCE == 'false')">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="TARGET_TABLE" FIELD="TEXT" NUM_ROW="110"
			REQUIRED='true'>
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="TARGET_TRUNCATE" FIELD="CHECK" NUM_ROW="120">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="TARGET_DISABLE_KEYS" FIELD="CHECK" NUM_ROW="120">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="EXCLUDE_COLUMNS" FIELD="TABLE"
			NUM_ROW="125" NB_LINES="10" >
			<ITEMS>
				<ITEM NAME="COLUMN" FIELD="TEXT" VALUE=""/>
			</ITEMS>
		</PARAMETER>

		<PARAMETER NAME="LOG_INTERVAL" FIELD="TEXT" NUM_ROW="130">
			<DEFAULT>5</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="DIE_ON_ERROR" FIELD="CHECK" NUM_ROW="130">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="SINGLE_INSTANCE" FIELD="CHECK" NUM_ROW="140">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="BACKUP_DATA" FIELD="CHECK" NUM_ROW="150">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="BACKUP_FILE" FIELD="FILE" NUM_ROW="150" REQUIRED='true' SHOW_IF="BACKUP_DATA == 'true'">
			<DEFAULT></DEFAULT>
		</PARAMETER>

	</PARAMETERS>

	<ADVANCED_PARAMETERS>
		<PARAMETER FIELD="TEXT" NAME="SOURCE_FETCHSIZE" NUM_ROW="10"
			READONLY="false" REQUIRED="true" SHOW="true">
			<DEFAULT>10000</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="SOURCE_PROPERTIES" FIELD="TEXT" NUM_ROW="20"
			REQUIRED="false" SHOW_IF="USE_EXISTING_CONNECTION == 'false'">
		</PARAMETER>

		<PARAMETER NAME="TARGET_BATCHSIZE" FIELD="TEXT" REQUIRED="true"
			NUM_ROW="30">
			<DEFAULT>10000</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="TARGET_PROPERTIES" FIELD="TEXT" REQUIRED="false"
			NUM_ROW="40" SHOW_IF="USE_EXISTING_CONNECTION == 'false'">
		</PARAMETER>

		<PARAMETER NAME="LOG_QUERY_SQL" FIELD="CHECK" NUM_ROW="50">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="LOG_INSERT_SQL" FIELD="CHECK" NUM_ROW="50">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

	</ADVANCED_PARAMETERS>

	<CODEGENERATION>
		<IMPORTS>
			<IMPORT NAME="Log4J" MODULE="log4j-1.2.17.jar" REQUIRED="true" />
			<IMPORT NAME="SQLRunner" MODULE="sqlrunner-9.4.jar" REQUIRED="true" />
			<IMPORT NAME="cimt Table Transfer" MODULE="table_transfer-2.0.jar" REQUIRED="true" />
			<IMPORT NAME="MySQLJDBCDriver" MODULE="mysql-connector-java-5.1.30-bin.jar" REQUIRED="true" />
		</IMPORTS>
	</CODEGENERATION>

	<RETURNS>
		<RETURN NAME="NB_LINE" TYPE="id_Integer" AVAILABILITY="AFTER" />
		<RETURN NAME="NB_INSERTS" TYPE="id_Integer" AVAILABILITY="AFTER" />
		<RETURN NAME="QUERY" TYPE="id_String" AVAILABILITY="AFTER" />
		<RETURN NAME="SOURCE_TABLE" TYPE="id_String" AVAILABILITY="AFTER" />
		<RETURN NAME="TARGET_TABLE" TYPE="id_String" AVAILABILITY="AFTER" />
	</RETURNS>

</COMPONENT>
